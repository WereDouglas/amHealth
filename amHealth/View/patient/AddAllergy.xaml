<Window x:Class="amHealth.View.patient.AddAllergy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
         
        Title="Add user" Height="152.805" Width="327.677"  WindowStyle="None">

    <Grid IsHitTestVisible="True" Margin="0,0,2,0">

        <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,49,0,0"/>
        <Button IsDefault="True" Style="{StaticResource SaveButton}" x:Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="65,79,0,0" Content="Create" HorizontalAlignment="Left" Width="83" Background="#FF2799F0" Foreground="White" Height="30" VerticalAlignment="Top"/>
        <Button IsCancel="True" Style="{StaticResource CancelButton}" MinWidth="60" Content="_Cancel" Margin="153,79,0,0" Height="29" VerticalAlignment="Top" HorizontalAlignment="Left" Width="76"/>
        <TextBox HorizontalAlignment="Left" x:Name="name" Margin="65,49,0,71" TextWrapping="Wrap" Text="{Binding CurrentUser.Email}" Width="164" RenderTransformOrigin="-1.893,1.016"/>
        <Label Content="Add allergy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="114,19,0,0" Width="83" FontWeight="Bold"/>
    </Grid>

</Window>

