<Window x:Class="amHealth.View.patient.AddCondition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
         
        Title="Add user" Height="152.805" Width="327.677"  WindowStyle="None">

    <Grid IsHitTestVisible="True" Margin="0,0,2,0">

        <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,48,0,0"/>
        <Button IsDefault="True" Style="{StaticResource SaveButton}" x:Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="65,90,0,0" Content="Add" HorizontalAlignment="Left" Width="83" Background="#FF2799F0" Foreground="White" Height="30" VerticalAlignment="Top"/>
        <Button IsCancel="True" Style="{StaticResource CancelButton}" MinWidth="60" Content="_Cancel" Margin="153,90,0,0" Height="29" VerticalAlignment="Top" HorizontalAlignment="Left" Width="76"/>
        <Label Content="Add Condition" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="65,10,0,0" Width="115" FontWeight="Bold"/>
        <ComboBox HorizontalAlignment="Left" Name="condition" Margin="65,51,0,0" VerticalAlignment="Top" Width="164"/>
    </Grid>

</Window>

