<Window x:Class="amHealth.View.patient.AddChronic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
         
        Title="Add user" Height="152.805" Width="327.677"  WindowStyle="None">

    <Grid IsHitTestVisible="True" Margin="0,0,2,0">

        <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,62,0,0"/>
        <Button IsDefault="True" Style="{StaticResource SaveButton}" x:Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="69,89,0,0" Content="Create" Background="#FF2799F0" Foreground="White" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="83"/>
        <Button IsCancel="True" Style="{StaticResource CancelButton}" MinWidth="60" Content="_Cancel" Margin="157,90,0,0" Height="29" VerticalAlignment="Top" HorizontalAlignment="Left" Width="76"/>
        <TextBox HorizontalAlignment="Left" x:Name="name" Margin="69,58,0,62" TextWrapping="Wrap" Text="{Binding CurrentUser.Email}" Width="164" RenderTransformOrigin="-1.893,1.016"/>
        <Label Content="Add chronic condition" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="127,24,0,0" FontWeight="Bold"/>
    </Grid>

</Window>

